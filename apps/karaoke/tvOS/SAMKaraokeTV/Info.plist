<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleName</key>
    <string>SAM Karaoke</string>
    <key>CFBundleIdentifier</key>
    <string>com.sam.karaoke.tvos</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>

    <!-- Local Network Permission -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>SAM Karaoke needs local network access to receive audio from iPhone microphones</string>

    <!-- Bonjour Services -->
    <key>NSBonjourServices</key>
    <array>
        <string>_sam-karaoke._tcp</string>
        <string>_sam-karaoke._udp</string>
    </array>

    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
    </array>
</dict>
</plist>
